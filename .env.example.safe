# ============================================================
# LUCA NRW Scraper - Safe Mode Configuration
# ============================================================
# 
# This is the SAFE MODE profile - ideal for:
# - First tests without risk
# - No API keys required
# - Understanding the workflow
# - Small lead volumes for quality checks
#
# Expected Results:
# - Runtime: 3-5 minutes
# - Leads: 10-30
# - Costs: â‚¬0
# - Block Risk: Minimal
#
# See: docs/CONFIGURATION_PROFILES.md#safe-mode
# ============================================================

# ==========================
# Django Core Settings
# ==========================

# SECURITY WARNING: Generate a strong secret key for production!
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-in-production-use-django-secret-key-generator

# SECURITY WARNING: Never set DEBUG=True in production!
DEBUG=False

# Comma-separated list of allowed hosts (domains/IPs that can access your app)
ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated list of trusted origins for CSRF protection
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ==========================
# Database Settings
# ==========================

# SQLite database path (relative to telis_recruitment directory)
DATABASE_URL=sqlite:///db.sqlite3

# ==========================
# Static & Media Files
# ==========================

STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# ==========================
# Scraper Configuration - SAFE MODE
# ==========================

# Path to scraper scripts
SCRAPER_PATH=../

# Safe Mode Settings: Minimal queries, low risk
SCRAPER_MODE=once
SCRAPER_QPI=6
SCRAPER_DATE_RESTRICT=d30
SCRAPER_DEFAULT_INDUSTRY=recruiter

# ==========================
# API Keys (Optional for Safe Mode)
# ==========================

# Safe Mode works WITHOUT these API keys!
# Leave empty for first tests - no costs incurred

# OpenAI API Key (for AI enrichment - optional)
OPENAI_API_KEY=

# Perplexity API Key (for AI enrichment - optional)
PERPLEXITY_API_KEY=

# ==========================
# Email Marketing (Optional)
# ==========================

BREVO_API_KEY=
BREVO_DEFAULT_LIST_ID=
BREVO_LANDING_PAGE_LIST_ID=
BREVO_WELCOME_TEMPLATE_ID=
BREVO_WEBHOOK_SECRET=

# ==========================
# Google Custom Search (Optional)
# ==========================

GOOGLE_API_KEY=
GOOGLE_CSE_ID=

# ==========================
# Logging & Monitoring
# ==========================

LOG_LEVEL=INFO

# ==========================
# Security Settings
# ==========================

SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
