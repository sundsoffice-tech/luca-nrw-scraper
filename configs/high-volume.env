# ==========================
# HIGH VOLUME PROFILE
# ==========================
# 
# This configuration profile is optimized for maximum throughput and
# aggressive scraping. Use this when you need to process large amounts
# of leads quickly.
#
# Security Level: MEDIUM-HIGH
# Performance: MAXIMUM
# Logging: MODERATE
# 
# ==========================

# ==========================
# Django Core Settings
# ==========================

SECRET_KEY=CHANGE-ME-GENERATE-UNIQUE-SECRET-KEY
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ==========================
# Database Settings
# ==========================

# Recommended: Use PostgreSQL for high volume
DATABASE_URL=postgresql://user:password@localhost:5432/luca_db

# ==========================
# Static & Media Files
# ==========================

STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# ==========================
# Scraper Configuration (AGGRESSIVE)
# ==========================

SCRAPER_PATH=../

# Continuous mode for non-stop operation
SCRAPER_MODE=continuous

# High queries per industry for maximum lead generation
SCRAPER_QPI=15

# Longer date range for more results
SCRAPER_DATE_RESTRICT=d90

SCRAPER_DEFAULT_INDUSTRY=recruiter

# ==========================
# Security Settings
# ==========================

# Still validate SSL in high volume mode
ALLOW_INSECURE_SSL=0

# Aggressive timeouts and high limits for speed
HTTP_TIMEOUT=10
MAX_FETCH_SIZE=5242880
ASYNC_LIMIT=50
ASYNC_PER_HOST=5
HTTP2=1

# Use proxies for distributed load (recommended for high volume)
HTTP_PROXY=
HTTPS_PROXY=
SOCKS_PROXY=

# ==========================
# Django Security
# ==========================

SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000

# ==========================
# API Keys
# ==========================

OPENAI_API_KEY=
PERPLEXITY_API_KEY=
BREVO_API_KEY=
GOOGLE_API_KEY=
GOOGLE_CSE_ID=

# ==========================
# Logging
# ==========================

# Moderate logging to track high volume operations
LOG_LEVEL=INFO

# ==========================
# Brevo Email Marketing
# ==========================

BREVO_DEFAULT_LIST_ID=
BREVO_LANDING_PAGE_LIST_ID=
BREVO_WELCOME_TEMPLATE_ID=
BREVO_WEBHOOK_SECRET=

# ==========================
# High Volume Recommendations
# ==========================
#
# 1. Use PostgreSQL instead of SQLite
# 2. Configure connection pooling
# 3. Enable caching (Redis recommended)
# 4. Monitor system resources (CPU, memory, network)
# 5. Use load balancing for multiple instances
# 6. Set up log rotation
# 7. Consider using proxies to distribute requests
# 8. Monitor API rate limits
# 9. Implement request queuing for peak loads
# 10. Regular database optimization and vacuum
