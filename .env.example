# ==========================
# Django Core Settings
# ==========================

# SECURITY WARNING: Generate a strong secret key for production!
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-in-production-use-django-secret-key-generator

# SECURITY WARNING: Never set DEBUG=True in production!
DEBUG=False

# Comma-separated list of allowed hosts (domains/IPs that can access your app)
# Example: example.com,www.example.com,api.example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated list of trusted origins for CSRF protection
# Include your full domain URL with protocol for production
# Example: https://example.com,https://www.example.com
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ==========================
# Database Settings
# ==========================

# SQLite database path (relative to telis_recruitment directory)
DATABASE_URL=sqlite:///db.sqlite3

# ==========================
# Static & Media Files
# ==========================

# Directory where static files are collected (leave default)
STATIC_ROOT=/app/telis_recruitment/staticfiles

# Directory where user-uploaded media files are stored
MEDIA_ROOT=/app/telis_recruitment/media

# ==========================
# Scraper Configuration
# ==========================

# Path to scraper scripts (relative path from Django app)
SCRAPER_PATH=../

# Scraper operation mode: once, continuous, talent_hunt
SCRAPER_MODE=once

# Queries Per Industry (higher = more leads per run)
SCRAPER_QPI=6

# Date restriction for search results (d30 = last 30 days, d90 = 90 days, etc.)
SCRAPER_DATE_RESTRICT=d30

# Default industry to scrape (recruiter, talent_hunt, callcenter, etc.)
SCRAPER_DEFAULT_INDUSTRY=recruiter

# ==========================
# AI Provider API Keys
# ==========================

# OpenAI API Key (for GPT models)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Perplexity API Key (for Perplexity AI models)
# Get your key at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# ==========================
# Brevo (Sendinblue) Email Marketing
# ==========================

# Brevo API Key
# Get your key at: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key-here

# Brevo Contact List IDs (optional, leave empty if not using)
BREVO_DEFAULT_LIST_ID=
BREVO_LANDING_PAGE_LIST_ID=
BREVO_WELCOME_TEMPLATE_ID=

# Brevo Webhook Security (optional)
BREVO_WEBHOOK_SECRET=

# ==========================
# Google Custom Search (Optional)
# ==========================

# Google Custom Search Engine credentials (for scraper)
GOOGLE_API_KEY=
GOOGLE_CSE_ID=

# ==========================
# Logging & Monitoring
# ==========================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==========================
# Security Settings (Production)
# ==========================

# Enable HTTPS-only cookies (set to True in production with SSL)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# HSTS (HTTP Strict Transport Security) - seconds to enforce HTTPS
# Recommended: 31536000 (1 year) for production with SSL
SECURE_HSTS_SECONDS=0
